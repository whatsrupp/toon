<div id='picture-index-page-wrapper'>
  <%if @pictures.any?%>
    <%@pictures.each do |picture|%>
    <div class='post'>
      <div class = 'post-image'>
        <%= link_to(picture_url(picture), :id =>"show-picture-#{picture.id}", :class => 'show-picture-link') do %>
          <div class="picture-container">
              <%= image_tag picture.thumbnail.url, :class => "index-image" %>
          </div>
        <%end%>
      </div>
      <div class=post-info>
        <div class=post-status>
        <div class='caption-div'>
          <%= picture.caption %>
        </div>
        <div class='likes-div'>Likes: <%=picture.likes.length%></div>
        </div>
        <div class='interaction-div'>
          <%= link_to(new_picture_like_url(picture), :id =>"like-button-#{picture.id}", :class => 'like-button') do%>
            <%= image_tag 'Like', :class => "like-image" %>
          <%end%>
          <%= link_to(new_picture_comment_url(picture), :id =>"comment-link-#{picture.id}", :class => 'comment-link') do %>
            <%= image_tag 'Comment', :class => "comment-image" %>
          <%end%>
        </div>
        <div class='comments'>Comments: <%=picture.comments.first.text if picture.comments.any?%> </div>
      </div>
    </div>
    <%end%>
  <%else%>
    <h1 id='no-pictures-title'>No Pictures Yet</h1>
  <%end%>
</div>
